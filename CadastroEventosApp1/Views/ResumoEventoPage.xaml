<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroEventosApp1.Views.ResumoEventoPage"
             Title="Resumo do Evento"
             BackgroundColor="{StaticResource Gray100}">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Resumo do Evento"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />

      

            <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Nome do Evento:" FontSize="14" TextColor="{StaticResource Gray600}" />
                    <Label Text="{Binding Nome}" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Gray950}" />

                    <Label Text="Local:" FontSize="14" TextColor="{StaticResource Gray600}" Margin="0,10,0,0" />
                    <Label Text="{Binding Local}" FontSize="18" TextColor="{StaticResource Gray950}" />
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Período:" FontSize="14" TextColor="{StaticResource Gray600}" />
                    <Label FontSize="18" TextColor="{StaticResource Gray950}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding DataInicio, StringFormat='{0:dd/MM/yyyy}'}" />
                                <Span Text=" até " />
                                <Span Text="{Binding DataTermino, StringFormat='{0:dd/MM/yyyy}'}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>

                    <Label Text="Duração Total:" FontSize="14" TextColor="{StaticResource Gray600}" Margin="0,10,0,0" />
                    <Label Text="{Binding DuracaoEmDias, StringFormat='{0} dias'}" FontSize="18" TextColor="{StaticResource Gray950}" />
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="10" Padding="15" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Participantes:" FontSize="14" TextColor="{StaticResource Gray600}" />
                    <Label Text="{Binding NumeroParticipantes, StringFormat='{0} pessoas'}" FontSize="18" TextColor="{StaticResource Gray950}" />

                    <Label Text="Custo por Participante:" FontSize="14" TextColor="{StaticResource Gray600}" Margin="0,10,0,0" />
                    <Label Text="{Binding CustoPorParticipante, StringFormat='R$ {0:N2}'}" FontSize="18" TextColor="{StaticResource Gray950}" />

                    <BoxView HeightRequest="1" Color="{StaticResource Gray200}" Margin="0,10" />

                    <Label Text="CUSTO TOTAL ESTIMADO:" FontSize="16" FontAttributes="Bold" TextColor="{StaticResource Gray600}" />
                    <Label Text="{Binding CustoTotal, StringFormat='R$ {0:N2}'}" FontSize="24" FontAttributes="Bold" TextColor="{StaticResource Primary}" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Voltar"
                    Clicked="BtnVoltar_Clicked"
                    CornerRadius="25"
                    HorizontalOptions="Fill"
                    Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>